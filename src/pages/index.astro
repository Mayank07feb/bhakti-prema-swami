          <!-- Background Pattern -->
          <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>

          <div class="relative">
            <!-- Icon -->
            <div class="mb-8">
              <div
                class="inline-flex items-center justify-center p-4 bg-white/20 rounded-2xl mb-6 group-hover:scale-110 transition-transform duration-300"
              >
                <svg
                  class="w-10 h-10 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <h3 class="text-3xl font-bold mb-3">Bangla Class</h3>
              <div class="w-20 h-1 bg-white/50 rounded-full"></div>
            </div>

            <!-- Time -->
            <div class="mb-8">
              <p class="text-2xl font-bold">9:30 AM – 10:00 AM</p>
              <p class="text-white/80 mt-2">Daily Morning Session</p>
            </div>

            <!-- Meeting Details -->
            <div
              class="bg-white/10 rounded-2xl p-6 mb-8 backdrop-blur-sm border border-white/20"
            >
              <div class="grid grid-cols-2 gap-6">
                <div>
                  <p class="text-sm text-white/80 mb-2">Meeting ID</p>
                  <p class="text-2xl font-bold tracking-wider">6790009886</p>
                </div>
                <div>
                  <p class="text-sm text-white/80 mb-2">Passcode</p>
                  <p class="text-2xl font-bold tracking-wider">123456</p>
                </div>
              </div>
            </div>

            <!-- Join Button -->
            <a
              href="#"
              class="inline-flex items-center justify-center w-full border-2 border-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-white hover:text-primary transition-all duration-300 shadow-lg hover:shadow-xl group/btn"
            >
              Join Class
              <svg
                class="w-5 h-5 ml-2 group-hover/btn:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Hindi Class -->
        <div
          class="group relative bg-white text-gray-900 rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 overflow-hidden border-2 border-primary/10"
        >
          <!-- Background Pattern -->
          <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

          <div class="relative">
            <!-- Icon -->
            <div class="mb-8">
              <div
                class="inline-flex items-center justify-center p-4 bg-primary/10 rounded-2xl mb-6 group-hover:scale-110 transition-transform duration-300"
              >
                <svg
                  class="w-10 h-10 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <h3 class="text-3xl font-bold mb-3 text-primary">Hindi Class</h3>
              <div class="w-20 h-1 bg-primary/50 rounded-full"></div>
            </div>

            <!-- Time -->
            <div class="mb-8">
              <p class="text-2xl font-bold text-primary">2:30 PM – 3:00 PM</p>
              <p class="text-gray-600 mt-2">Daily Afternoon Session</p>
            </div>

            <!-- Meeting Details -->
            <div
              class="bg-primary/5 rounded-2xl p-6 mb-8 border border-primary/10"
            >
              <div class="grid grid-cols-2 gap-6">
                <div>
                  <p class="text-sm text-gray-600 mb-2">Meeting ID</p>
                  <p class="text-2xl font-bold text-primary tracking-wider">
                    6790009886
                  </p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-2">Passcode</p>
                  <p class="text-2xl font-bold text-primary tracking-wider">
                    123456
                  </p>
                </div>
              </div>
            </div>

            <!-- Join Button -->
            <a
              href="#"
              class="inline-flex items-center justify-center w-full border-2 border-primary px-8 py-4 rounded-xl font-bold text-lg text-primary hover:bg-primary hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl group/btn"
            >
              Join Class
              <svg
                class="w-5 h-5 ml-2 group-hover/btn:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Border Divider -->
  <div
    class="h-1 bg-gradient-to-r from-primary-hover/0 via-primary-hover to-primary-hover/0"
  >
  </div>

  <!-- ================= MEDIA SECTION ================= -->
  <section
    class="bg-gradient-to-b from-section-bg to-white py-16 md:py-24 relative"
  >
    <!-- ================= VIDEO LECTURE SECTION ================= -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <!-- ================= SECTION HEADING ================= -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div
          class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-2 rounded-full mb-4"
