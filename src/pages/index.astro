              <!-- Play Button -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div
                  class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
                >
