// src/pages/vani/[slug].astro
import Layout from "../../layouts/Layout.astro";
import { API } from "../../config/api";

export const prerender = false;

const { slug } = Astro.params;

// ── Helper ────────────────────────────────────────────────────
function formatDate(d: string | null): string {
  if (!d) return "";
  return new Date(d).toLocaleDateString("en-IN", {
    day: "numeric", month: "long", year: "numeric",
  });
}

// ── Fetch single lecture ──────────────────────────────────────
// If slug is numeric → GET /transcript/:id
// If slug is string  → GET /transcript/slug/:slug
let vani: any = null;
let prevLecture: any = null;
let nextLecture: any = null;

try {
  let row: any = null;
  const isNumeric = /^\d+$/.test(slug ?? "");

  if (isNumeric) {
    const res  = await fetch(API.transcriptById(slug!));
    const json = await res.json();
    if (json.success && json.data) row = json.data;
  } else {
    const res  = await fetch(API.transcriptBySlug(slug!));
    const json = await res.json();
    if (json.success && json.data) row = json.data;
  }

  if (!row) return Astro.redirect("/404");

  // ✅ /transcript/slug/:slug returns category_names[] & location_names[] directly
  vani = {
    id:          row.id,
    slug:        row.slug || String(row.id),
    title:       row.name              || "Untitled",
    description: row.description       || "",
    date:        formatDate(row.publish_date),
    categories:  row.category_names    || [],
    location:   (row.location_names    || []).join(", "),
    audio: {
      available: row.is_audio_available === "YES",
      url:       row.audio_url || null,
    },
    media:     row.media               || [],
    link:      row.link                || null,
    metaTitle: row.meta_title          || null,
    metaDesc:  row.meta_description    || null,
  };

  // ── Prev / Next ───────────────────────────────────────────
  // /transcript/filters now has category_names, location_names, audio field
  try {
    const listRes  = await fetch(API.transcriptFilters);
    const listJson = await listRes.json();
    const allList  = (listJson.data || []);

    const idx = allList.findIndex((r: any) => r.id === vani.id);
    if (idx > 0) {
      const p = allList[idx - 1];
      prevLecture = { slug: p.slug || String(p.id), title: p.name || "Previous" };
    }
    if (idx !== -1 && idx < allList.length - 1) {
      const n = allList[idx + 1];
      nextLecture = { slug: n.slug || String(n.id), title: n.name || "Next" };
    }
  } catch (_) { /* non-critical */ }

} catch (err) {
  console.error("[vani/slug] fetch error:", err);
  return Astro.redirect("/404");
}

if (!vani) return Astro.redirect("/404");
