<script>
const audio = document.getElementById('audio-element') as HTMLAudioElement | null;
if (audio) {
  const playPauseBtns = document.querySelectorAll('.play-pause-btn');
  const rewindBtns    = document.querySelectorAll('.rewind-btn');
  const forwardBtns   = document.querySelectorAll('.forward-btn');
  const volumeBtns    = document.querySelectorAll('.volume-btn');
  const progressBars  = document.querySelectorAll('.audio-slider');
  const currentTimes  = document.querySelectorAll('.current-time');
  const totalTimes    = document.querySelectorAll('.total-time');
  let isPlaying = false;
  let isMuted   = false;

  const fmt = (s: number) =>
    isNaN(s) ? '0:00' : `${Math.floor(s / 60)}:${String(Math.floor(s % 60)).padStart(2, '0')}`;

  audio.addEventListener('loadedmetadata', () =>
    totalTimes.forEach(el => el.textContent = fmt(audio.duration)));

  playPauseBtns.forEach(btn => btn.addEventListener('click', () => {
    isPlaying ? audio.pause() : audio.play();
    isPlaying = !isPlaying;
    document.querySelectorAll('.play-icon').forEach(i  => i.classList.toggle('hidden', isPlaying));
    document.querySelectorAll('.pause-icon').forEach(i => i.classList.toggle('hidden', !isPlaying));
  }));

  rewindBtns.forEach(btn  => btn.addEventListener('click', () =>
    audio.currentTime = Math.max(0, audio.currentTime - 10)));
  forwardBtns.forEach(btn => btn.addEventListener('click', () =>
    audio.currentTime = Math.min(audio.duration, audio.currentTime + 10)));

  volumeBtns.forEach(btn => btn.addEventListener('click', () => {
    isMuted = !isMuted;
    audio.muted = isMuted;
    document.querySelectorAll('.volume-icon').forEach(i => i.classList.toggle('hidden', isMuted));
    document.querySelectorAll('.mute-icon').forEach(i  => i.classList.toggle('hidden', !isMuted));
  }));

  audio.addEventListener('timeupdate', () => {
    if (!audio.duration) return;
    const pct = (audio.currentTime / audio.duration) * 100;
    (progressBars as NodeListOf<HTMLInputElement>).forEach(b => b.value = pct.toString());
    currentTimes.forEach(el => el.textContent = fmt(audio.currentTime));
  });

  progressBars.forEach((bar: any) => bar.addEventListener('input', (e: Event) => {
    audio.currentTime = ((e.target as HTMLInputElement).valueAsNumber / 100) * audio.duration;
  }));

  audio.addEventListener('ended', () => {
    isPlaying = false;
    document.querySelectorAll('.play-icon').forEach(i  => i.classList.remove('hidden'));
    document.querySelectorAll('.pause-icon').forEach(i => i.classList.add('hidden'));
    (progressBars as NodeListOf<HTMLInputElement>).forEach(b => b.value = '0');
    currentTimes.forEach(el => el.textContent = '0:00');
  });
}
</script>

