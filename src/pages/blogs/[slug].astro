---
// src/pages/blogs/[slug].astro
import Layout from "../../layouts/Layout.astro";
import { API } from "../../config/api";

export const prerender = false;

const { slug } = Astro.params;

// ── Fetch single blog ─────────────────────────────────────────
let blog: any = null;
let allBlogs: any[] = [];
let prevBlog: any = null;
let nextBlog: any = null;

try {
  // Note: Assuming endpoint is GET /blogs/:slug
  // If it's different, update API.blogBySlug in api.ts
  const res = await fetch(API.blogBySlug(slug!));
  const data = await res.json();

  if (!data.success || !data.data) {
    return Astro.redirect("/404");
  }

  const raw = data.data;

  blog = {
    id: raw.id,
    slug: raw.slug,
    title: raw.name,
    content: raw.description || "Content not available.",
    excerpt: raw.meta_description,
    metaTitle: raw.meta_title,
    metaDesc: raw.meta_description,
    date: new Date(raw.created_at_utc).toLocaleDateString("en-IN", {
      day: "numeric", month: "long", year: "numeric"
    }),
    media: raw.media || [],
    coverImage: raw.media?.[0]?.thumbnail_url || "https://images.unsplash.com/photo-1532012197267-da84d127e765?w=1200",
  };

  // ── Fetch all blogs for prev/next ─────────────────────────
  try {
    const allRes = await fetch(API.blogs);
    const allData = await allRes.json();
    if (allData.success) allBlogs = allData.data;

    const idx = allBlogs.findIndex((b: any) => b.slug === slug);
    if (idx > 0) {
      const p = allBlogs[idx - 1];
      prevBlog = { slug: p.slug, title: p.name };
    }
    if (idx !== -1 && idx < allBlogs.length - 1) {
      const n = allBlogs[idx + 1];
      nextBlog = { slug: n.slug, title: n.name };
    }
  } catch (_) { /* non-critical */ }

} catch (err) {
  console.error("[blogs/slug] fetch error:", err);
  return Astro.redirect("/404");
}

if (!blog) return Astro.redirect("/404");
---

<Layout page="blog-detail">

  <!-- PAGE HEADER -->
  <section class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <nav class="mb-4 sm:mb-6 flex items-center gap-2 text-xs sm:text-sm text-text-body/60">
        <a href="/blogs" class="hover:text-primary transition-colors">Blog</a>
        <svg class="w-3 h-3 sm:w-4 sm:h-4 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-text-body font-medium truncate">{blog.title}</span>
      </nav>

      <h1 class="font-pacifico text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-primary mb-4 sm:mb-6 break-words leading-tight">
        {blog.title}
      </h1>

      <div class="flex items-center gap-4 text-sm text-text-body/60">
        <div class="flex items-center gap-1.5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span>{blog.date}</span>
        </div>
      </div>
    </div>
  </section>

  <div class="h-2 bg-primary-hover"></div>

  <!-- MAIN CONTENT -->
  <section class="bg-section-bg min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">

      <!-- Cover Image -->
      <div class="mb-8 rounded-xl overflow-hidden shadow-lg">
        <img
          src={blog.coverImage}
          alt={blog.title}
          class="w-full aspect-[21/9] object-cover"
        />
      </div>

      <!-- Content -->
      <article class="bg-white rounded-xl border border-text-body/10 shadow-sm p-6 sm:p-8 lg:p-10 mb-8">
        <div class="prose prose-sm sm:prose-base lg:prose-lg max-w-none">
          {blog.content.split('\n\n').map((para: string) => (
            <p class="text-text-body text-base leading-relaxed mb-4 last:mb-0">{para}</p>
          ))}
        </div>
      </article>

      <!-- Media Gallery -->
      {blog.media.length > 1 && (
        <div class="bg-white rounded-xl border border-text-body/10 shadow-sm p-6 mb-8">
          <h3 class="text-lg font-bold text-text-body mb-4">Media</h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
            {blog.media.map((m: any) => (
              <a
                href={m.media_url}
                target="_blank"
                rel="noopener noreferrer"
                class="group aspect-square rounded-lg overflow-hidden border border-text-body/10 hover:border-primary transition-all duration-200"
              >
                {m.thumbnail_url ? (
                  <img
                    src={m.thumbnail_url}
                    alt={m.media_name}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                ) : (
                  <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                    <span class="text-xs text-text-body/40 text-center px-2">{m.media_name}</span>
                  </div>
                )}
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Share -->
      <div class="bg-white rounded-xl border border-text-body/10 shadow-sm p-6 mb-8">
        <h3 class="text-sm font-bold text-text-body/60 uppercase tracking-wider mb-3">Share this post</h3>
        <div class="flex gap-3">
          <button
            type="button"
            class="flex-1 sm:flex-none inline-flex items-center justify-center gap-2 bg-white border border-text-body/20 text-text-body px-4 py-2 rounded-lg text-sm font-semibold hover:border-primary hover:text-primary active:scale-95 transition-all duration-200"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
            Share
          </button>
        </div>
      </div>

      <!-- Prev / Next -->
      <div class="flex flex-col sm:flex-row items-stretch sm:items-center justify-between gap-4">
        {prevBlog ? (
          <a
            href={`/blogs/${prevBlog.slug}`}
            class="group flex items-center gap-3 bg-white border border-text-body/10 px-5 py-4 rounded-xl shadow-sm hover:shadow-md hover:border-primary active:scale-[0.98] transition-all duration-200"
          >
            <svg class="w-5 h-5 text-text-body/40 group-hover:text-primary transition-colors flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
            </svg>
            <div class="flex-1 min-w-0">
              <p class="text-xs text-text-body/50 mb-0.5">Previous</p>
              <p class="text-sm font-semibold text-text-body group-hover:text-primary transition-colors truncate">
                {prevBlog.title}
              </p>
            </div>
          </a>
        ) : (
          <div class="sm:w-1/2"></div>
        )}

        {nextBlog ? (
          <a
            href={`/blogs/${nextBlog.slug}`}
            class="group flex items-center gap-3 bg-primary text-white px-5 py-4 rounded-xl shadow-sm hover:shadow-lg hover:bg-primary-hover active:scale-[0.98] transition-all duration-200"
          >
            <div class="flex-1 min-w-0 text-right">
              <p class="text-xs text-white/70 mb-0.5">Next</p>
              <p class="text-sm font-semibold text-white truncate">
                {nextBlog.title}
              </p>
            </div>
            <svg class="w-5 h-5 text-white flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        ) : (
          <div class="sm:w-1/2"></div>
        )}
      </div>

    </div>
  </section>

</Layout>

<style>
.prose p {
  text-align: justify;
  hyphens: auto;
}
@media (max-width: 640px) {
  .prose p {
    text-align: left;
    hyphens: none;
  }
}
</style>